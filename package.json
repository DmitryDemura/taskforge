{
  "name": "taskforge",
  "private": true,
  "version": "2.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "node scripts/clean.js",
    "clean:git": "node scripts/clean.js --git",
    "reinstall": "node scripts/clean.js --no-docker && npm install --include-workspace-root --workspaces",
    "rebuild": "node scripts/rebuild.js",
    "frontend:rebuild": "node scripts/rebuild.js --frontend-only",
    "frontend:dev": "npm run dev -w apps/vue",
    "backend:rebuild": "node scripts/rebuild.js --backend-only",
    "backend:dev": "npm run start:dev -w apps/backend",
    "backend:stop": "docker compose -f docker-compose.yml -f docker-compose.dev.yml stop api redis",
    "lint": "node scripts/lint-format.mjs check",
    "lint:fix": "node scripts/lint-format.mjs fix"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "concurrently": "9.1.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "typescript": "5.6.3"
  }
}
