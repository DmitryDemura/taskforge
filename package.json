{
  "name": "taskforge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "up": "docker compose up -d",
    "down": "docker compose down -v --remove-orphans",
    "rebuild": "node scripts/rebuild.js",
    "rebuild:backend": "node scripts/rebuild.js --backend-only",
    "rebuild:frontend": "node scripts/rebuild.js --frontend-only",
    "dev-local": "node scripts/dev-local.js",
    "clean": "node scripts/clean.js",
    "start": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "stop": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "restart": "docker compose -f docker-compose.yml -f docker-compose.dev.yml restart",
    "logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f",
    "logs:api": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f api",
    "logs:frontend": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f frontend",
    "logs:db": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f db",
    "logs:redis": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f redis",
    "dev": "concurrently \"npm run dev:api:local\" \"npm run dev:frontend:local\"",
    "dev:api:local": "cd backend && npm run start:dev",
    "dev:frontend:local": "cd frontend && npm run dev",
    "prisma:generate": "docker compose exec api npx prisma generate",
    "prisma:migrate": "docker compose exec api npx prisma migrate deploy",
    "prisma:studio": "docker compose exec api npx prisma studio",
    "lint": "node eslint.config.mjs checkAll",
    "lint:fix": "node eslint.config.mjs fixAll",
    "lint:backend": "node eslint.config.mjs checkBackend",
    "lint:frontend": "node eslint.config.mjs checkFrontend",
    "lint:scripts": "node eslint.config.mjs checkScripts",
    "lint:fix:backend": "node eslint.config.mjs fixBackend",
    "lint:fix:frontend": "node eslint.config.mjs fixFrontend",
    "lint:fix:scripts": "node eslint.config.mjs fixScripts",
    "format": "node eslint.config.mjs formatAll",
    "format:fix": "node eslint.config.mjs formatAll",
    "format:check": "prettier --check . --config .prettierrc.json --ignore-path .prettierignore",
    "format:backend": "node eslint.config.mjs formatBackend",
    "format:frontend": "node eslint.config.mjs formatFrontend",
    "format:docs": "node eslint.config.mjs formatDocs",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DmitryDemura/taskforge.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/DmitryDemura/taskforge/issues"
  },
  "homepage": "https://github.com/DmitryDemura/taskforge#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "5.6",
    "typescript-eslint": "^8.43.0"
  }
}
